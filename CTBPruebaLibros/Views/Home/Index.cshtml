@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">

    <div class="col-12">

        <div class="alert alert-info" role="alert">
            Crud Libros
        </div>
        <button type="button" class="btn btn-success btn-sm boton-nuevo-libro">Nuevo Libro</button>

        <table class="table table-striped" id="tablaLibros">
            <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Título</th>
                    <th>Autor</th>
                    <th>Descripción</th>
                    <th>Fecha de Publicación</th>
                    <th>Género</th>
                    <th>Cantidad</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>
</div>



<!-- Modal Libros -->
<div class="modal fade" id="modalLibro" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Libro</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input type="text" class="form-control" id="txtTitulo" autocomplete="off">
                </div>

                <div class="mb-3">
                    <label class="form-label">Autor</label>
                    <input type="text" class="form-control" id="txtAutor" autocomplete="off">
                </div>

                <div class="mb-3">
                    <label class="form-label">Descripción</label>
                    <textarea class="form-control" id="txtDescripcion" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Fecha de Publicación</label>
                    <input type="text" class="form-control" id="txtFechaPublicacion">
                </div>

                <div class="mb-3">
                    <label class="form-label">Género</label>
                    <input type="text" class="form-control" id="txtGenero" autocomplete="off">
                </div>

                <div class="mb-3">
                    <label class="form-label">Imagen</label>
                    <input type="text" class="form-control" id="txtImagen">
                </div>

                <div class="mb-3">
                    <label class="form-label">Cantidad</label>
                    <input type="number" class="form-control" id="txtCantidad">
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary boton-guardar-cambios-libro">Guardar</button>
            </div>
        </div>
    </div>
</div>



<!-- Modal Prestamo -->
<div class="modal fade" id="modalPrestamo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Prestamo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input type="text" disabled class="form-control" id="txtTituloPrestamo" autocomplete="off">
                </div>

                <div class="mb-3">
                    <label class="form-label">Fecha de salida</label>
                    <input type="text" class="form-control" id="txtFechaSalida" autocomplete="off">
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary boton-guardar-cambios-prestamo">Prestar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/index.js"></script>
}